{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "next/typescript"],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "semi": "error",
    "no-console": "error",
    "max-len": ["error", {
      "code": 120,
      "ignoreComments": true
    }],
    "indent": ["error", 2],
    "no-multiple-empty-lines": ["error", { "max": 2, "maxBOF": 0, "maxEOF": 0 }],
    "object-curly-spacing": ["error", "always"],
    "no-trailing-spaces": "error"
  }
}
